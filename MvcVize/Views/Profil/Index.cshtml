@{ Kullanici k = (Kullanici)Session["Kullanici"]; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/Tema/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/Tema/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card-body">
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle" src="~/Content/Resim/Kullanici/@k.resim" style="width:200px" alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@k.ad @k.soyad</h3>

                            <p class="text-muted text-center"></p>

                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>E-Posta</b> <a class="float-right">@k.eposta</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Şifre</b> <a class="float-right">*********</a>
                                </li>
                            </ul>

                            <a href="#" class="btn btn-primary btn-block"><b>Bilgileri Güncelle</b></a>
                        </div>
                        <!-- /.card-body -->
                    </div>

                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Hakkında</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fas fa-book mr-1"></i>Konum</strong>

                            <p class="text-muted">@k.ilceler.iller.sehir @k.ilceler.ilce</p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i> Cinsiyet</strong>

                            @if (@k.cinsiyet == true)
                            {<p class="text-muted">Erkek</p> }
                            else { <p class="text-muted">Kadın</p>}


                            <hr>

                            <strong><i class="fas fa-pencil-alt mr-1"></i>Adres</strong>

                            <p class="text-muted">@k.adres</p>

                            <hr>

                            <strong><i class="far fa-file-alt mr-1"></i>Telefon</strong>

                            <p class="text-muted">@k.telefon</p>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->
                
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="/Content/Tema/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Content/Tema/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Content/Tema/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/Content/Tema/dist/js/demo.js"></script>
</body>
</html>
