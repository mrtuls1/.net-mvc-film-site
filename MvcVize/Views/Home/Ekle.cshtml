


@using (Html.BeginForm("Ekle", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="card-body">
    <div class="form-group">
        <label for="exampleInputEmail1">Kategori</label>
        @Html.DropDownList("kategoriID", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Filmin Adı</label>
        <input type="text" class="form-control" placeholder="Filmin Adı" name="ad">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Özet</label>
        <input type="text" class="form-control" placeholder="Filmin Özeti" name="ozet">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Resim</label>
        <input type="file" class="form-control" id="exampleInputEmail1" name="resim2">
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>

</div> <!-- /.card-body -->
         
}